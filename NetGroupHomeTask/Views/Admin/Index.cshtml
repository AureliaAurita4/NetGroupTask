<div class="py-5 text-center">
    <h2>Admin page</h2>
    <p class="lead">Please add new event below</p>
</div>

<div class="col-md-7 col-lg-8">
    <form class="needs-validation" novalidate method="post" action="@Url.Action("AddEvent", "Event")">
        <div class="row g-3">
            <div class="col-sm-4">
                <label for="eventName" class="form-label">Event title</label>
                <input type="text" class="form-control" id="eventName" name="name" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid event title is required.
                </div>
            </div>

            <div class="col-sm-4">
                <label for="eventDateTime" class="form-label">Event date and time</label>
                <input type="text" class="form-control" id="eventDateTime" name="dateAndTime" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid event date and time is required.
                </div>
            </div>

            <div class="col-sm-4">
                <label for="maxAudienceNumber" class="form-label">Maximum amount of people</label>
                <input type="text" class="form-control" id="maxAudienceNumber" name="maxAudienceNumber" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid maximum amount of people is required.
                </div>
            </div>
        </div>
        <hr class="my-4">
        <button type="submit" class="btn btn-sm btn-outline-primary">Add event to the database</button>
    </form>

</div>