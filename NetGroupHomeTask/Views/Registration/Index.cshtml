@{
}

<div class="py-5 text-center">
    <h2>Registration page</h2>
    <p class="lead">Please add your data below</p>
</div>

<div class="col">
    <div class="card shadow-sm">
        <div class="card-body">
            <p class="card-text">@Model.Name</p>
            <p class="card-text">@Model.DateAndTime</p>
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Audience: @Model.MaxAudienceNumber</small>
            </div>
        </div>
    </div>
</div>
<hr class="my-4">

<div class="col-md-7 col-lg-8">
    <form class="needs-validation" novalidate method="post" action="@Url.Action("Register", "Registration")">
        <div class="row g-3">
            <div class="col-sm-4">
                <label for="firstName" class="form-label">First name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid event title is required.
                </div>
            </div>

            <div class="col-sm-4">
                <label for="lastName" class="form-label">Last name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid event date and time is required.
                </div>
            </div>

            <div class="col-sm-4">
                <label for="IdentityCode" class="form-label">Identity code</label>
                <input type="text" class="form-control" id="IdentityCode" name="IdentityCode" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid maximum amount of people is required.
                </div>
            </div>
        </div>
        <hr class="my-4">
        <button type="submit" class="btn btn-sm btn-outline-primary">Register</button>
    </form>

</div>
